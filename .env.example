# Server configuration
PORT=8080

# Postgres database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=miniclue

# Supabase JWT secret for validating access tokens
SUPABASE_LOCAL_JWT_SECRET=your-supabase-jwt-secret

# Supabase authentication settings
SUPABASE_LOCAL_AUTH_GOOGLE_CLIENT_ID=
SUPABASE_LOCAL_AUTH_GOOGLE_SECRET=

# Supabase Storage (S3) settings
SUPABASE_LOCAL_S3_URL=https://your-supabase-url
SUPABASE_LOCAL_S3_BUCKET=your-supabase-bucket
SUPABASE_LOCAL_S3_REGION=your-supabase-region
SUPABASE_LOCAL_S3_ACCESS_KEY=your-access-key
SUPABASE_LOCAL_S3_SECRET_KEY=your-secret-key

# Python service base URL
PYTHON_SERVICE_BASE_URL=http://localhost:8000

# Ingestion orchestrator settings
INGESTION_QUEUE_NAME=ingestion_queue
INGESTION_DEAD_LETTER_QUEUE_NAME=ingestion_queue_dlq
